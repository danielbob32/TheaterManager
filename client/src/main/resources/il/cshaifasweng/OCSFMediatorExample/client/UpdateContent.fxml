<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.UpdateContentController" style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);">
    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>
        <Text text="Update Content" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1e3c72; "/>
        <Button text="All Movies List" onAction="#allMoviesList" styleClass="menu-button" style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 20;"/>
        <Button text="Edit Cinema Movies" onAction="#editCinemaMovies" styleClass="menu-button" style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 20;"/>
        <Button text="Edit Home Movies" onAction="#editHomeMovies" styleClass="menu-button" style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 20;"/>
        <Button text="Add movie/Home Movie" onAction="#addMovie" styleClass="menu-button" style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 20;"/>
        <Button text="Update Prices" onAction="#updatePrices" styleClass="menu-button" style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 20;"/>
        <Button text="Back" onAction="#goBack" styleClass="back-button" />
    </VBox>
</AnchorPane>