<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.BookingsBoundary">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <DatePicker fx:id="fromDatePicker" promptText="From Date"/>
    <DatePicker fx:id="toDatePicker" promptText="To Date"/>
    <Button fx:id="filterButton" text="Apply Filter"/>
    <TableView fx:id="bookingTable">
        <columns>
            <TableColumn fx:id="bookingIdColumn" text="Booking ID"/>
            <TableColumn fx:id="purchaseTimeColumn" text="Purchase Time"/>
            <TableColumn fx:id="productsCountColumn" text="Products Count"/>
            <TableColumn fx:id="totalAmountPaidColumn" text="Total Amount Paid"/>
        </columns>
    </TableView>
    <Button fx:id="applyRefundButton" text="Apply for Refund"/>
    <Button fx:id="showBookingsButton" text="Show All Bookings"/>
    <Button onAction="#handleBackButton" text="Back"/>
</VBox>
