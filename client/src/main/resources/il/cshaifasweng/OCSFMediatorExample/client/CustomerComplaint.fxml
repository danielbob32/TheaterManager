<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CustomerComplaintHandlingBoundary"
      spacing="10" alignment="CENTER" styleClass="complaints-root">

    <Label text="Complaints" styleClass="complaints-label" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <!-- Updated TableView -->
    <TableView fx:id="complaintTableView" VBox.vgrow="ALWAYS" styleClass="complaints-table-view">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" />
            <TableColumn fx:id="dateColumn" text="Date Submitted" />
            <TableColumn fx:id="statusColumn" text="Status" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="viewComplaintButton" text="View Complaint" styleClass="complaints-button complaints-view-button"/>
        <Button fx:id="submitNewComplaintButton" text="Submit New Complaint" styleClass="complaints-button complaints-submit-button"/>
    </HBox>

    <Button text="Back to Main Menu" onAction="#handleBackButton" styleClass="menu-button"/>
    <stylesheets>
        <URL value="@App.css"/>
    </stylesheets>
</VBox>
