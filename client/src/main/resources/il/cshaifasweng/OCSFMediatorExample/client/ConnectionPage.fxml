<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ConnectionController">
    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 20, 0, 0, 0);" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100" AnchorPane.topAnchor="100" AnchorPane.bottomAnchor="100">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <Label text="Enter Server Details" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #1e3c72; -fx-effect: dropshadow(one-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 1);">
            <effect>
                <DropShadow offsetY="2" color="#00000040" />
            </effect>
        </Label>

        <TextField fx:id="ipTextField" promptText="IP Address" style="-fx-font-size: 16px; -fx-text-fill: #1e3c72;" />
        <TextField fx:id="portTextField" promptText="Port" style="-fx-font-size: 16px; -fx-text-fill: #1e3c72;" />

        <Button text="Connect" onAction="#handleConnect" style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 30; -fx-cursor: hand;">
            <effect>
                <DropShadow />
            </effect>
        </Button>
    </VBox>
</AnchorPane>
