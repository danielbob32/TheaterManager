<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.LoginPageController" style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);">
    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Text text="Welcome to Movie Theater" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #1e3c72;"/>

        <TextField fx:id="timeField" editable="false" style="-fx-alignment: CENTER; -fx-font-size: 18px; -fx-font-weight: bold;"/>

        <ImageView fitWidth="300" fitHeight="200" preserveRatio="true">
            <Image url="@/Images/MovieTheater.jpg"/>
        </ImageView>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Coming Soon" onAction="#viewFutureMovies" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            <Button text="View Home Movies" onAction="#viewHomeMovies" style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            <Button text="Now in Theaters" onAction="#viewMovieList" style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>

        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.8); -fx-padding: 20; -fx-background-radius: 5;">
            <ComboBox fx:id="userTypeComboBox" promptText="Select User Type" style="-fx-pref-width: 200;"/>
            <TextField fx:id="idTextField" promptText="Enter ID" style="-fx-pref-width: 200;"/>
            <PasswordField fx:id="passwordTextField" promptText="Enter Password" style="-fx-pref-width: 200;"/>
            <Button text="Login" onAction="#handleLogin" style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-pref-width: 200;"/>
        </VBox>
    </VBox>
</AnchorPane>