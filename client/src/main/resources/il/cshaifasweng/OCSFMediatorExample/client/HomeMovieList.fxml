<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.HomeMoviesListBoundary" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Back" onAction="#handleBackButton"/>
    </HBox>
    <Button text="Show All Home Movies" onAction="#showHomeMovies"/>
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox fx:id="moviesContainer" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </ScrollPane>
</VBox>
