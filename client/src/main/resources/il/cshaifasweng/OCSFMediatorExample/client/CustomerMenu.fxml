<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Circle?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CustomerMenuController" fx:id="rootPane" style="-fx-background-color: linear-gradient(to bottom right, #000428, #004e92);">
    <VBox fx:id="buttonBox" alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 15, 0, 0, 0);">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <Label fx:id="welcomeLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #004e92;" alignment="CENTER" VBox.vgrow="NEVER"/>
        <HBox alignment="CENTER" spacing="20">
            <Button text="Coming Soon" onAction="#viewFutureMovies" style="-fx-background-color: #004e92; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            <Button text="Now in Theaters" onAction="#viewMovieList" style="-fx-background-color: #004e92; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            <Button text="Home Movies" onAction="#viewHomeMovies" style="-fx-background-color: #004e92; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>
        <Button text="Buy Ticket Tab" onAction="#buyTicketTab" style="-fx-background-color: #004e92; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        <Button text="Refund Tickets" onAction="#refundTickets" style="-fx-background-color: #004e92; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        <Button text="File Complaint" onAction="#fileComplaint" style="-fx-background-color: #004e92; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </VBox>

    <!-- Adding particle effect in the background -->
    <Circle fx:id="particle1" radius="2" fill="white" style="-fx-opacity: 0.8;" />
    <Circle fx:id="particle2" radius="2" fill="white" style="-fx-opacity: 0.8;" />
    <Circle fx:id="particle3" radius="2" fill="white" style="-fx-opacity: 0.8;" />
</AnchorPane>
