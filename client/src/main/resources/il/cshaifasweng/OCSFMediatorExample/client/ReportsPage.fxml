<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ReportsPageController"
            style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);">
    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.bottomAnchor="50"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">
        <Label text="Reports" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>
        <ComboBox fx:id="reportTypeComboBox" promptText="Select Report Type"/>
        <ComboBox fx:id="monthPicker" promptText="Select Month"/>
        <ComboBox fx:id="cinemaComboBox" promptText="Select Cinema"/>
        <Button text="Generate Report" onAction="#generateReport" 
                style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
            <VBox fx:id="reportContainer" spacing="10"/>
        </ScrollPane>
        <Button fx:id="backButton" text="Back" onAction="#handleBackButton"
                style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </VBox>
</AnchorPane>