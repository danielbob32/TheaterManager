<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ReportsPageController">
    <VBox fx:id="mainContainer" alignment="CENTER" fillWidth="true" prefWidth="800" spacing="10" style="-fx-padding: 20;">
        <Label style="-fx-font-size: 16px; -fx-text-fill: white;" text="Select Report Details" />
        <HBox alignment="CENTER" spacing="10">
            <ComboBox fx:id="reportTypeComboBox" prefHeight="25.0" prefWidth="234.0" promptText="Report Type" />
            <ComboBox fx:id="monthPicker" prefWidth="120" promptText="Month" />
            <ComboBox fx:id="cinemaComboBox" prefWidth="150" promptText="Cinema" />
        </HBox>
        <Button fx:id="generateReportButton" onAction="#generateReport" prefWidth="200" style="-fx-background-color: darkblue; -fx-text-fill: white;" text="Generate Report" />
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
            <VBox fx:id="reportContainer" alignment="CENTER" fillWidth="true" spacing="10" />
        </ScrollPane>
        <Label fx:id="totalTicketsLabel" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Total Tickets: 0" />
        <Label fx:id="totalTicketTabsLabel" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Total Ticket Tabs: 0" />
        <Label fx:id="totalLinksLabel" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Total Links: 0" />
        <Label fx:id="totalComplaintsLabel" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Total Complaints: 0" />
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="exportButton" onAction="#exportToExcel" prefWidth="120" style="-fx-background-color: darkgreen; -fx-text-fill: white;" text="Export to Excel" />
            <Button fx:id="backButton" onAction="#handleBackButton" prefWidth="120" style="-fx-background-color: darkred; -fx-text-fill: white;" text="Back" />
        </HBox>
    </VBox>
</AnchorPane>
